<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zeiss.koch.kaffeekasse.SettingsActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/background_grey">


    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.6">

        <EditText
            android:id="@+id/userEditText"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:ems="10"
            android:inputType="textPersonName"
            style="@android:style/TextAppearance.Medium"
            android:hint="Vorname Nachname" />

        <Button
            android:id="@+id/AddUserButton"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="AddNewUserClick"
            android:text="Nutzer hinzufügen"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"/>



        <Spinner
            android:id="@+id/userSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/DeleteUserButton"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:onClick="DeleteUserClick"
            android:text="Nutzer löschen"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content" />
        <EditText
            android:id="@+id/userRenameText"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textPersonName"
            style="@android:style/TextAppearance.Medium"
            android:hint="Vorname Nachname" />

        <Button
            android:id="@+id/RenameUserButton"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="RenameUserClick"
            android:text="Nutzer umbenennen"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/amountEditText" />
        <Button
            android:id="@+id/updateAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="UpdateAccountClick"
            android:text="Kontostand korrigieren"
            style="@android:style/TextAppearance.Medium"  />

        <TextView
            android:id="@+id/nfcTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="NFC"
            style="@android:style/TextAppearance.Medium"  />
        <Button
            android:id="@+id/updateUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="UpdateUserClick"
            android:text="Nutzer aktualisieren"
            style="@android:style/TextAppearance.Medium"  />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:layout_column="2"
            android:layout_row="4"
            android:id="@+id/roleSpinner"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/updateRoleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="UpdateRoleClick"
            android:text="Rolle ändern"
            style="@android:style/TextAppearance.Medium"  />

        <Button
            android:text="Datenbank wiederherstellen"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:layout_gravity="end"
            android:id="@+id/button"
            android:onClick="RestoreDatabaseClick" />

        <CheckBox
            android:text="Backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backupCheckBox"
            android:layout_column="0"
            android:layout_row="4"
            style="@android:style/TextAppearance.Large"
            android:clickable="false"
            android:focusable="false"
            android:checked="false" />

        <TextView
            android:text="Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            android:layout_column="1"
            android:layout_row="4"
            style="@android:style/TextAppearance.Large" />


    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">




    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

        <Button
            android:text="Anwendung beenden"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/exitApplicationButton"
            android:layout_weight="1"
            android:onClick="ExitClick" />
    </LinearLayout>

</LinearLayout>