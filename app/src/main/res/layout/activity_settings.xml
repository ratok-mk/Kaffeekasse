<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zeiss.koch.kaffeekasse.SettingsActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userEditText"
        android:textSize="18dp"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:text="Nutzer hinzufÃ¼gen"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/AddUserButton"
        android:onClick="AddNewUserClick"
        android:layout_row="0"
        android:layout_column="1" />


    <TextView
        android:text="NFC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nfcTextView"
        android:textSize="18sp"
        android:layout_row="1"
        android:layout_column="0" />


    <Button
        android:text="Nutzer aktualisieren"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/updateUserButton"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="UpdateUserClick" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/userSpinner"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2" />



</GridLayout>
