<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="android:textAppearanceLarge">@style/TextAppearance.Huge</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:imageButtonStyle">@style/imageButtonStyle</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/button_grey</item>
        <item name="android:textSize">22dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/button_grey</item>
    </style>

    <style name="spinnerStyle.Highlight" parent="spinnerStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/highlight</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="imageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/button_grey</item>
    </style>

    <style name="TextAppearance.Huge" parent="android:TextAppearance.Large">
        <item name="android:textSize">50dp</item>
    </style>

    <style name="TextAppearance.Huge.Dark" parent="TextAppearance.Huge">
        <item name="android:textColor">@color/background_grey</item>
    </style>

    <style name="TextAppearance.Medium.Warning" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/warning_red</item>
    </style>

    <style name="TextAppearance.Medium.Warning.Yellow" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/warning_yellow</item>
    </style>


    <style name="TextAppearance.Large.Warning" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/warning_red</item>
    </style>

    <style name="TextAppearance.Large.Warning.Yellow" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/warning_yellow</item>
    </style>

    <style name="balance_plus" parent="android:TextAppearance.Large">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="balance_minus" parent="balance_plus">
        <item name="android:textColor">@color/warning_red</item>
    </style>

    <style name="balance_low" parent="balance_plus">
        <item name="android:textColor">@color/warning_yellow</item>
    </style>

    <style name="FullscreenTheme" parent="DarkTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
