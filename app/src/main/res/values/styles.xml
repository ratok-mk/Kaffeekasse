<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="android:Theme.Material">
        <item name="android:textAppearanceLarge">@style/TextAppearance.Huge</item>
    </style>

    <style name="TextAppearance.Huge" parent="android:TextAppearance.Large">
        <item name="android:textSize">60dp</item>
    </style>
    <style name="TextAppearance.Medium.Red" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextAppearance.Large.Red" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="balance_plus" parent="android:TextAppearance.Large">
        <item name="android:textSize">40dp</item>
    </style>

    <style name="balance_minus" parent="balance_plus">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
